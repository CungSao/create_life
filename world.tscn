resource_name = "gameover"
script/source = "extends Control

func _ready():
	hide()
	modulate.a = 0
	
	Game.gameover.connect(_on_gameover)

func _on_gameover():
	show()
	create_tween().tween_property(self, \"modulate:a\", 1, .2)
	
	while !Input.is_action_pressed(\"ui_accept\"):
		await get_tree().process_frame
		
	Game.restart()
"

