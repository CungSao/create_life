script/source = "extends Control

func _ready():
	show()
	get_tree().set_pause(true)

	while !Input.is_action_pressed(\"ui_accept\"):
		await get_tree().process_frame
	
	get_tree().set_pause(false)
	create_tween().tween_property(self, \"modulate:a\", 0, .2)
	hide()
"

